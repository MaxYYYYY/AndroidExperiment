<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maxstudio.androidexperiment.AddCommodityActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginStart="24dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cd_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品编号:"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/et_cd_id"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="请输入商品编号"
            android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cd_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称:"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/et_cd_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="请输入商品名称"
            android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cd_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品价格:"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/et_cd_price"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="请输入商品价格"
            android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_cd_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品数量:"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/et_cd_num"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:hint="请输入商品数量"
            android:textSize="24sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btn_cd_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"/>

    </LinearLayout>
</LinearLayout>
